{
    "extends": "eslint-config-nfl",
    "env": {
        "node": true,
        "mocha": true
    },
    "globals": {
        "$": true,
        "$$": true,
        "browser": true,
        "by": true,
        "element": true,
        "expect": true,
        "protractor": true
    },
    "rules": {
	"prefer-arrow-callback": 0
    },
    "settings": {
        "import/ignore": [
            "jspm_packages",
            "node_modules",
            ".(scss|less|css)$",
            ".[^js(x)?]+$"
        ],
        "import/resolve": {
            "moduleDirectory": [
                "jspm_packages",
                "node_modules",
                "."
            ]
        },
        "import/resolver": {
            "jspm": {
                "moduleDirectory": "jspm_packages",
                "pathsOverride": {
                    "public": "src"
                }
            },
            "node": {
                "moduleDirectory": "node_modules"
            }
        }
    }
}
